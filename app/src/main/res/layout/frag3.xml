<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="30dp"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/subLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEEBB6"
        android:elevation="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/goalView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="자기 보상을 입력하세요"
                android:textColorHint="#F69F48"
                android:textColor="#F69F48"
                android:textSize="30dp"
                android:inputType="text"
                android:maxLines="1"
                android:shadowRadius="1.0"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowColor="#000000"
                android:fontFamily="@font/bold"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/animationLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/carrotView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:elevation="10dp"
                app:srcCompat="@drawable/carrot" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:max="100"
                android:elevation="10dp"
                android:progressDrawable="@drawable/custom_progress"
                android:progress="0" />

            <TextView
                android:id="@+id/percentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="17dp"
                android:text="0%"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nutrientsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:srcCompat="@drawable/nutrientbutton" />

            <ImageView
                android:id="@+id/waterView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="10dp"
                app:srcCompat="@drawable/waterbutton" />

            <ImageView
                android:id="@+id/sunView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:srcCompat="@drawable/sunbutton" />
        </LinearLayout>

        <TextView
            android:id="@+id/pointView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textColor="#F69F48"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="사용 가능한 포인트 : 0" />
    </LinearLayout>

</LinearLayout>