<?xml version="1.0" encoding="utf-8"?>
<!-- 영양제 효과 화면 부분 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nutrients"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/nutrient" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nutrient1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/nutrientdrop" />

        <ImageView
            android:id="@+id/nutrient2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/nutrientdrop" />

        <ImageView
            android:id="@+id/nutrient3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/nutrientdrop" />

        <ImageView
            android:id="@+id/nutrient4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/nutrientdrop" />

        <ImageView
            android:id="@+id/nutrient5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/nutrientdrop" />

    </LinearLayout>

</LinearLayout>